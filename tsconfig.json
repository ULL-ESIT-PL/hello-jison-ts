{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node", "jest"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "dist/**/*",
    "node_modules/**/*"
  ]
}
