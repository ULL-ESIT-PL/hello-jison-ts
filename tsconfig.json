{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
